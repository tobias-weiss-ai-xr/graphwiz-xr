# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript / JavaScript
[*.{ts,tsx,js,jsx,json}]
indent_style = space
indent_size = 2

# Rust
[*.{rs,toml}]
indent_style = space
indent_size = 4

# CSS / SCSS
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# HTML
[*.{html,xml}]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# Makefile
[Makefile]
indent_style = tab
