# GraphWiz-XR Development Environment Configuration
# Copy this file to .env and customize for your local setup

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://graphwiz:graphwiz_dev@localhost:5432/graphwiz
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=graphwiz
DATABASE_PASSWORD=graphwiz_dev
DATABASE_NAME=graphwiz

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# Service Ports
# =============================================================================
AUTH_SERVICE_PORT=8001
HUB_SERVICE_PORT=8002
PRESENCE_SERVICE_PORT=8003
SFU_SERVICE_PORT=8004
HUB_CLIENT_PORT=5173
ADMIN_CLIENT_PORT=5174

# =============================================================================
# Service Configuration
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_WORKERS=2

# Rust Log Level (trace, debug, info, warn, error)
RUST_LOG=debug

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET=graphwiz_dev_secret_change_in_production
JWT_EXPIRATION=86400

# =============================================================================
# SFU Configuration
# =============================================================================
SFU_MAX_ROOMS=100
SFU_MAX_PEERS_PER_ROOM=50
SFU_MAX_VIDEO_TRACKS=4
SFU_MAX_AUDIO_TRACKS=2
SFU_ENABLE_SIMULCAST=true
SFU_ENABLE_SVC=false
SFU_MAX_VIDEO_BITRATE=3000000
SFU_MIN_VIDEO_BITRATE=300000
SFU_AUDIO_BITRATE=64000
SFU_RTP_PORT_START=10000
SFU_RTP_PORT_END=20000

# =============================================================================
# ICE Servers (for WebRTC)
# =============================================================================
# Use public STUN servers (replace with your own in production)
ICE_SERVER_1_URL=stun:stun.l.google.com:19302
ICE_SERVER_2_URL=stun:stun1.l.google.com:19302

# Optional TURN server (required for production)
# ICE_SERVER_3_URL=turn:your-turn-server.com:3478
# ICE_SERVER_3_USERNAME=your-username
# ICE_SERVER_3_CREDENTIAL=your-credential

# =============================================================================
# Client Configuration
# =============================================================================
VITE_API_BASE_URL=http://localhost:8001
VITE_HUB_API_URL=http://localhost:8002
VITE_PRESENCE_WS_URL=ws://localhost:8003
VITE_SFU_URL=http://localhost:8004

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_WEBTRANSPORT=false
FEATURE_VR_MODE=true
FEATURE_SCREEN_SHARE=true
FEATURE_RECORDING=false

# =============================================================================
# Development Settings
# =============================================================================
NODE_ENV=development
VITE_DEV=true
